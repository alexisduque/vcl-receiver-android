<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:id="@+id/id">
    <TextView
        android:id="@+id/irTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#b0d88400"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:text="@string/zone1_name"
        android:textColor="@android:color/white" />
    <LinearLayout android:id="@+id/irChart"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_weight="0.8">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/rxText"
            android:inputType="textMultiLine"
            android:text="Hello !"
            android:background="@android:color/background_light"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/horizMargin"
            android:layout_marginRight="@dimen/horizMargin" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_gravity="right"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:layout_weight="0.05">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/clearBtn"
            android:clickable="true"
            android:layout_weight="0.5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveBtn"
            android:clickable="true"
            android:layout_weight="0.5" />
    </LinearLayout>

    <LinearLayout android:id="@+id/redChart"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
        android:background="#d7dd0017"
        android:layout_gravity="center"
        android:layout_weight="0.1">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enable Logging"
            android:id="@+id/switch1"
            android:background="#d7dd0017"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:checked="false"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:enabled="true" />
    </LinearLayout>

</LinearLayout>
